{
  "name": "time.bjesuiter.de",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bunx vite dev --port 3000",
    "dev2": "bunx vite dev --port 3001 --mode memory",
    "build": "bunx vite build",
    "serve": "bunx vite preview",
    "test:unit": "bun test tests/unit",
    "testw:unit": "bun test --watch tests/unit",
    "test:integration": "bun test tests/integration",
    "testw:integration": "bun test --watch tests/integration",
    "test:e2e": "bunx playwright test --config tests/e2e/playwright.config.ts",
    "test:e2e:ui": "bunx playwright test --config tests/e2e/playwright.config.ts --ui",
    "test:e2e:debug": "bunx playwright test --config tests/e2e/playwright.config.ts --debug",
    "test:all": "bun test tests/unit && bun test tests/integration && bun run test:e2e",
    "e2e": "bun run test:e2e",
    "e2e:report": "bunx playwright show-report reports/html",
    "dbpush": "bunx drizzle-kit push",
    "dbgenerate": "bunx drizzle-kit generate",
    "dbseed": "bunx drizzle-seed",
    "dbstudio": "bunx drizzle-kit studio",
    "auth-schema": "bunx --bun @better-auth/cli generate --output ./src/db/schema/better-auth.ts",
    "pg": "bun ./playground/clockify-api.bun.ts"
  },
  "dependencies": {
    "@tanstack/react-devtools": "^0.8.1",
    "@tanstack/react-query": "^5.90.7",
    "@tanstack/react-query-devtools": "^5.84.2",
    "@tanstack/react-router": "^1.134.18",
    "@tanstack/react-router-devtools": "^1.134.18",
    "@tanstack/react-router-ssr-query": "^1.134.18",
    "@tanstack/react-start": "^1.134.18",
    "@tanstack/router-plugin": "^1.134.18",
    "@tanstack/zod-adapter": "^1.134.18",
    "better-auth": "^1.3.28",
    "better-sqlite3": "^12.4.1",
    "drizzle-orm": "^0.44.7",
    "ky": "^1.14.0",
    "lucide-react": "^0.553.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "vite-tsconfig-paths": "^5.1.4",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@libsql/client": "^0.15.15",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/vite": "^4.1.17",
    "@testing-library/dom": "^10.4.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "^1.3.2",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/browser-playwright": "^4.0.8",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.6",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.7.2",
    "vite": "^7.2.2",
    "web-vitals": "^5.1.0"
  }
}